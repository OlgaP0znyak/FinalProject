    <test name="Tests firefox" parallel="classes">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.it_academy.ui.EachElementOfAccessoriesContainingTest"/>
            <class name="com.it_academy.ui.ListItemsOfComputersAndNetsExistingTest"/>
            <class name="com.it_academy.ui.MainMenuItemsExistingTest"/>
        </classes>
    </test>
</suite>