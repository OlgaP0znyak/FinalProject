<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="UI Testing Suite">
    <test name="Tests chrome" parallel="classes">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.it_academy.ui.EachElementOfAccessoriesContainingTest"/>
            <class name="com.it_academy.ui.ListItemsOfComputersAndNetsExistingTest"/>
